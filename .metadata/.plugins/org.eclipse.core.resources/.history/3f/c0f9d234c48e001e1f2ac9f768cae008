package achiving_preDefined_methods_with_my_logic_of_array;

import java.util.ArrayList;
import java.util.List;

public class Array 
{

	
	public  static void display( int[] arr)
	{
		
		for(int i=0;i<arr.length;i++)
		{
			System.out.print(arr[i]+" -> ");
			
		}
		System.out.println("null");
	}
	
	
	public static void sort(int[] arr)
	{
		for(int i=0;i<arr.length;i++)
		{
			for(int j=0;j<(arr.length);j++)
			{
				if(arr[i]<arr[j])
				{
					
					int temp=arr[i];
					arr[i]=arr[j];
					arr[j]=temp;
				}
			}
		}
		
		display(arr);
	}
	
	public static List<Integer> asList(int[] arr)
	{
		List<Integer> list=new ArrayList<>();
		
		for(int i=0;i<arr.length;i++)
		{
			list.add(arr[i]);
		}
		
		return list;
	}
	
	public static int binarySearch(int key,int[] arr)
	{
		int l=0; int h=arr.length-1; int mid=0;
		
		while(l<h)
		{
			mid=(l+h)/2;
			
			if(arr[mid]==key)
			{
				return mid;
			}else if(key<arr[mid])
			{
				h=mid-1;
			}else
			{
				l=mid+1;
			}
		}
		return -1;
	}
	public static void main(String[] args) {
		
		int[]  a={4,2,0,40,40,50,46,27,99,50,1};
		//Array.display(a);
		//Array.sort(a);
		//System.out.println(Array.asList(a));
		System.out.println(Array.binarySearch(99, a));
	}
	
	
}
